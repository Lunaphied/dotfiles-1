[add "interactive"]
	useBuiltin = true

[advice]
	detachedHead = false

[alias]
	s = status
	d = diff --staged
	rs = restore --staged
	ap = add -pu
	git = !git
	pukk = pull
	r = restore
	tlog = log --graph --oneline --all

[blame]
	coloring = highlightRecent

[core]
	pager = delta

[interactive]
	diffFilter = delta --color-only

[delta]
	features = line-numbers decorations

[user]
	name = Jade
	email = software@lfcode.ca

[pull]
	ff = only

[push]
	default = current

[merge]
	conflictStyle = diff3

[init]
	defaultBranch = main

[rerere]
	enabled = true

[cola]
	spellcheck = false

# rebase --autosquash by default
[rebase]
	autoSquash = true

# git clone -j8 by default
[submodule]
	fetchJobs = 8

[url "git@github.com:"]
	pushInsteadOf = git://github.com/
	pushInsteadOf = https://github.com/

