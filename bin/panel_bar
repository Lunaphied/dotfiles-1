#!/bin/bash

num_mon=$(bspc query -M | wc -l)
P=" | "

while read -r line; do
	case $line in
		N*)
			# network
			network="${line#?}"
			;;
		P*)
			power="${line#?}"
			;;
		C*)
			# clock
			clock="${line#?}"
			;;
		W*)
			# bspwm arcana. For now, a noop.
			;;
	esac
	echo -e "%{r}${network}${P}${power}${P}${clock}  "
done
