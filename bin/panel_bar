#!/bin/bash

source panel_colours
num_mon=$(bspc query -M | wc -l)
P=" | "

close="${wm_infos}%{F$COLOUR_CLOSE_FG}%{B$COLOUR_CLOSE_BG}%{A:bspc window -c:} X %{A}%{B-}%{F-}"

while read -r line; do
	case $line in
		N*)
			# network
			network="${line#?}"
			;;
		P*)
			power="${line#?}"
			;;
		C*)
			# clock
			clock="${line#?}"
			;;
		T*)
			# title
			title="${line#?}"
			;;
		O*)
			# cOmpositing
			compositing="%{A:sh -c 'killall compton || (compton &)':}"
			if [[ "${line#?}" == y ]]; then
				compositing="${compositing}%{F$COLOUR_COMPOSITING_ACTIVE_FG}%{B$COLOUR_COMPOSITING_ACTIVE_BG} C %{B-}%{F-}"
			else
				compositing="${compositing}%{F$COLOUR_COMPOSITING_INACTIVE_FG}%{B$COLOUR_COMPOSITING_INACTIVE_BG} - %{B-}%{F-}"
			fi
			compositing="${compositing}%{A}"
			;;
		W*)
			# bspwm arcana
			wm_infos=""
			item=$1
			name=${item#?}
			IFS=":"
			set -- ${line#?}
			while [[ $# > 0 ]]; do
				item=$1
				name=${item#?}
				case $item in
					M*)
						# active monitor
						if [[ $num_mon > 1 ]]; then
							wm_infos="${wm_infos}%{F$COLOUR_ACTIVE_MONITOR_FG}%{B$COLOR_ACTIVE_MONITOR_BG}%{A:bspc desktop -f ${name}:} ${name} %{A}%{B-}%{F-}  "
						fi
						;;
					m*)
						# inactive monitor
						if [[ $num_mon > 1 ]]; then
							wm_infos="${wm_infos}%{F$COLOUR_INACTIVE_MONITOR_FG}%{B$COLOR_INACTIVE_MONITOR_BG}%{A:bspc desktop -f ${name}:} ${name} %{A}%{B-}%{F-}  "
						fi
						;;
					O*)
						# focussed occupied desktop
						wm_infos="${wm_infos}%{F$COLOUR_FOCUSSED_OCCUPIED_FG}%{B$COLOUR_FOCUSSED_OCCUPIED_BG}%{A:bspc desktop -f ${name}:} ${name} %{A}%{B-}%{F-}"
						;;
					o*)
						# occupied desktop
						wm_infos="${wm_infos}%{F$COLOUR_OCCUPIED_FG}%{B$COLOUR_OCCUPIED_BG}%{A:bspc desktop -f ${name}:} ${name} %{A}%{B-}%{F-}"
						;;
					F*)
						# focussed free desktop
						wm_infos="${wm_infos}%{F$COLOUR_FOCUSSED_FREE_FG}%{B$COLOUR_FOCUSSED_FREE_BG}%{A:bspc desktop -f ${name}:} ${name} %{A}%{B-}%{F-}"
						;;
					f*)
						# free desktop
						wm_infos="${wm_infos}%{F$COLOUR_FREE_FG}%{B$COLOUR_FREE_BG}%{A:bspc desktop -f ${name}:} ${name} %{A}%{B-}%{F-}"
						;;
					u*)
						# urgent desktop
						wm_infos="${wm_infos}%{F$COLOUR_URGENT_FG}%{B$COLOUR_URGENT_BG}%{A:bspc desktop -f ${name}:} ${name} %{A}%{B-}%{F-}"
						;;
					L*)
						# layout
						wm_infos="${wm_infos}   %{F$COLOUR_LAYOUT_FG}%{B$COLOUR_LAYOUT_BG}%{A:bspc desktop focused -l next:} ${name} %{A}%{B-}%{F-}"
						;;
				esac
				shift
			done
			;;
	esac
	echo -e "%{l}${wm_infos}${compositing}${close}%{c}${title}%{r}${network}${P}${power}${P}${clock}  "
done
