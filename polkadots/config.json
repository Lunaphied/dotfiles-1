{
    "dotfile_repo": "~/.dotfiles",
    "actions": [
        {
            "type": "SymlinkAction",
            "source": "polkadots",
            "destination": "~/.config/polkadots"
        },
        {
            "type": "SymlinkAction",
            "source": "lighthouse",
            "destination": "~/.config/lighthouse"
        },
        {
            "type": "SymlinkAction",
            "source": "sxhkd",
            "destination": "~/.config/sxhkd"
        },
        {
            "type": "SymlinkAction",
            "source": "main",
            "destination": "~",
            "dir_mode": true
        },
        {
            "type": "SymlinkAction",
            "source": "colors",
            "destination": "~/.colors"
        }
    ]
}
