{
    "dotfile_repo": "~/.dotfiles/system",
    "actions": [
        {
            "type": "CopyAction",
            "source": "thinkpad/xinitrc.d",
            "destination": "/etc/X11/xinit/xinitrc.d",
            "dir_mode": true
        },
        {
            "type": "CopyAction",
            "source": "thinkpad/trackpoint-setup",
            "destination": "/usr/local/bin/trackpoint-setup"
        }
    ]
}
